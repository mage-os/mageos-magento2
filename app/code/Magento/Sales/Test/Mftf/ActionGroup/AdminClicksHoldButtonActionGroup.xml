<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminClicksHoldButtonActionGroup">
        <annotations>
            <description>Admin clicks hold button.</description>
        </annotations>
        <waitForElementClickable selector="{{AdminOrderDetailsMainActionsSection.hold}}" stepKey="waitForHoldButtonToBeClickable"/>
        <click selector="{{AdminOrderDetailsMainActionsSection.hold}}" stepKey="clickHoldButton"/>
    </actionGroup>
</actionGroups>
