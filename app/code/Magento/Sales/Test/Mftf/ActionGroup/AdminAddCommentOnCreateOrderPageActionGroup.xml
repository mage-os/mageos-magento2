<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAddCommentOnCreateOrderPageActionGroup">
        <annotations>
            <description>Add Comment On Create Order Page</description>
        </annotations>
        <arguments>
            <argument name="comment" type="string"/>
        </arguments>
    
        <fillField selector="{{AdminCreateOrderCommentsSection.orderComments}}" userInput="{{comment}}" stepKey="provideComment"/>    

    </actionGroup>
</actionGroups>
