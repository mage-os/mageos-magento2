<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="StorefrontOpenCheckoutPageActionGroup">
        <annotations>
            <description>Goes to the Storefront Checkout page.</description>
        </annotations>

        <amOnPage url="{{CheckoutPage.url}}" stepKey="openCheckoutPage"/>
        <waitForPageLoad stepKey="waitForCheckoutPageLoaded"/>
        <waitForLoadingMaskToDisappear stepKey="waitForContentLoaded"/>
    </actionGroup>
</actionGroups>
