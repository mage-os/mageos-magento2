<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminMediaGalleryAssertFolderNameActionGroup">
        <arguments>
            <argument name="name" type="string" defaultValue="{{AdminMediaGalleryFolderData.name}}"/>
        </arguments>
        <waitForElementVisible selector="{{AdminMediaGalleryFolderSection.folderInTree(name)}}" stepKey="waitForFolder"/>
    </actionGroup>
</actionGroups>
