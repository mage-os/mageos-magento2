<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminEnhancedMediaGalleryAssertImagesDeletedInBulkActionGroup">
        <annotations>
            <description>Asserts images has been deleted in mass action.</description>
        </annotations>
        <arguments>
            <argument name="numberOfAssetsDeleted" type="string"/>
        </arguments>
        <waitForText userInput='{{numberOfAssetsDeleted}} assets have been successfully deleted.' stepKey="verifyDeleteImages"/>
    </actionGroup>
</actionGroups>
