<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="AdminProductImagesSection">
        <element name="productImagesToggle" type="button" selector="div[data-index=gallery] .admin__collapsible-title"/>
        <element name="imageFileUpload" type="input" selector="div.image div.fileinput-button .uppy-Dashboard-input"/>
        <element name="imageUploadButton" type="button" selector="div.image div.fileinput-button"/>
        <element name="imageFile" type="text" selector="//*[@id='media_gallery_content']//img[contains(@src, '{{url}}')]" parameterized="true"/>
        <element name="imageFileRoleByImage" type="text" selector="//*[@id='media_gallery_content']//img[contains(@src, '{{url}}')]/ancestor::div[@data-role='image']//*[@data-role-code='{{roleCode}}']" parameterized="true"/>
        <element name="imageElement" type="text" selector="#media_gallery_content img"/>
        <element name="removeImageButton" type="button" selector=".action-remove"/>
        <element name="removeImageButtonForExactImage" type="button" selector="[id='media_gallery_content'] img[src*='{{imageName}}'] + div[class='actions']  button[class='action-remove']" parameterized="true"/>
        <element name="modalOkBtn" type="button" selector="button.action-primary.action-accept"/>
        <element name="uploadProgressBar" type="text" selector=".uploader .file-row"/>
        <element name="productImagesToggleState" type="button" selector="[data-index='gallery'] > [data-state-collapsible='{{status}}']" parameterized="true"/>
        <element name="nthProductImage" type="button" selector="#media_gallery_content > div:nth-child({{var}}) img.product-image" parameterized="true"/>
        <element name="nthRemoveImageBtn" type="button" selector="#media_gallery_content > div:nth-child({{var}}) button.action-remove" parameterized="true"/>
        <element name="thrumbnailimage" type="text" selector="//*[@class='thumbnail-wrapper']//img[contains(@src, '{{url}}')]" parameterized="true"/>
        <element name="imagesContainer" type="text" selector="#media_gallery_content"/>
        <element name="imageContainer" type="text" selector="//*[@id='media_gallery_content']//img[contains(@src, '{{url}}')]/ancestor::div[@data-role='image']" parameterized="true"/>
        <element name="nthImageContainer" type="text" selector="#media_gallery_content > div[data-role='image']:nth-child({{var}})" parameterized="true"/>

        <element name="altText" type="textarea" selector="textarea[data-role='image-description']"/>

        <element name="roleCheckbox" type="checkbox" selector=".field-image-role input[value='{{role}}']" parameterized="true"/>
        <element name="role" type="button" selector=".field-image-role input[value='{{role}}']+label" parameterized="true"/>
        <element name="roleBase" type="button" selector=".field-image-role [value='image']+label"/>
        <element name="roleSmall" type="button" selector=".field-image-role [value='small_image']+label"/>
        <element name="roleThumbnail" type="button" selector=".field-image-role [value='thumbnail']+label"/>
        <element name="roleSwatch" type="button" selector=".field-image-role [value='swatch_image']+label"/>

        <element name="hideFromProductPage" type="checkbox" selector="#hide-from-product-page"/>
        <element name="hideFromProductPageLabel" type="button" selector="#hide-from-product-page+label"/>
        
        <element name="isRoleChecked" type="checkbox" selector=".field-image-role input[value='{{role}}']:checked" parameterized="true"/>
        <element name="isRoleUnchecked" type="checkbox" selector=".field-image-role input[value='{{role}}']:not(:checked)" parameterized="true"/>
        <element name="isBaseSelected" type="checkbox" selector=".field-image-role input[value='image']:checked"/>
        <element name="isSmallSelected" type="checkbox" selector=".field-image-role input[value='small_image']:checked"/>
        <element name="isThumbnailSelected" type="checkbox" selector=".field-image-role input[value='thumbnail']:checked"/>
        <element name="isSwatchSelected" type="checkbox" selector=".field-image-role input[value='swatch_image']:checked"/>
        
        <element name="isHideFromProductPageSelected" type="checkbox" selector=".field-image-hide input:not([data-role=use-default]):checked"/>

        <element name="isAltTextDisabled" type="textarea" selector="textarea[data-role='image-description']:disabled"/>
        <element name="isAltTextEnabled" type="textarea" selector="textarea[data-role='image-description']:enabled"/>

        <element name="isRoleDisabled" type="checkbox" selector=".field-image-role input[value='{{role}}']:disabled" parameterized="true"/>
        <element name="isRoleEnabled" type="checkbox" selector=".field-image-role input[value='{{role}}']:enabled" parameterized="true"/>
        <element name="isBaseDisabled" type="checkbox" selector=".field-image-role input[value='image']:disabled"/>
        <element name="isSmallDisabled" type="checkbox" selector=".field-image-role input[value='small_image']:disabled"/>
        <element name="isThumbnailDisabled" type="checkbox" selector=".field-image-role input[value='thumbnail']:disabled"/>
        <element name="isSwatchDisabled" type="checkbox" selector=".field-image-role input[value='swatch_image']:disabled"/>
        
        <element name="isHideFromProductPageDisabled" type="checkbox" selector=".field-image-hide input:not([data-role=use-default]):disabled" />
        <element name="isHideFromProductPageEnabled" type="checkbox" selector=".field-image-hide input:not([data-role=use-default]):enabled" />

        <element name="altTextUseDefault" type="checkbox" selector=".field-image-description [data-role='use-default']"/>
        
        <element name="roleUseDefault" type="checkbox" selector=".field-image-role [data-role='use-default'][name='use_default[{{role}}]']" parameterized="true"/>
        <element name="roleBaseUseDefault" type="checkbox" selector=".field-image-role [data-role='use-default'][name='use_default[image]']"/>
        <element name="roleSmallUseDefault" type="checkbox" selector=".field-image-role [data-role='use-default'][name='use_default[small_image]']"/>
        <element name="roleThumbnailUseDefault" type="checkbox" selector=".field-image-role [data-role='use-default'][name='use_default[thumbnail]']"/>
        <element name="roleSwatchUseDefault" type="checkbox" selector=".field-image-role [data-role='use-default'][name='use_default[swatch_image]']"/>

        <element name="hideFromProductUseDefault" type="checkbox" selector=".field-image-hide [data-role='use-default']"/>

        <element name="isAltTextUseDefaultSelected" type="checkbox" selector=".field-image-description [data-role='use-default']:checked"/>

        <element name="isRoleUseDefaultSelected" type="checkbox" selector=".field-image-role [data-role='use-default'][name='use_default[{{role}}]']:checked" parameterized="true"/>
        <element name="isBaseUseDefaultSelected" type="checkbox" selector=".field-image-role [data-role='use-default'][name='use_default[image]']:checked"/>
        <element name="isSmallUseDefaultSelected" type="checkbox" selector=".field-image-role [data-role='use-default'][name='use_default[small_image]']:checked"/>
        <element name="isThumbnailUseDefaultSelected" type="checkbox" selector=".field-image-role [data-role='use-default'][name='use_default[thumbnail]']:checked"/>
        <element name="isSwatchUseDefaultSelected" type="checkbox" selector=".field-image-role [data-role='use-default'][name='use_default[swatch_image]']:checked"/>

        <element name="isHideFromProductPageUseDefaultSelected" type="checkbox" selector=".field-image-hide [data-role='use-default']:checked"/>
        
        <element name="sortOrderUseDefault" type="checkbox" selector="#media_gallery_content .field-sort-order-use_default input[type='checkbox']"/>
        <element name="isSortOrderUseDefaultSelected" type="checkbox" selector="#media_gallery_content .field-sort-order-use_default input[type='checkbox']:checked"/>
    </section>
</sections>
