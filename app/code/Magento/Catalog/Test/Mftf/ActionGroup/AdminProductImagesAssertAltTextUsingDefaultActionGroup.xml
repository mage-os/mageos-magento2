<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminProductImagesAssertAltTextUsingDefaultActionGroup" extends="AdminProductAssertImageAltTextActionGroup">
        <annotations>
            <description>Expands "Images And Videos" section, clicks on provided image, assert image alt text is using default value.</description>
        </annotations>
        <waitForElementVisible selector="{{AdminProductImagesSection.isAltTextDisabled}}" after="waitForSlideOut" stepKey="seeInputDisabled"/>
        <seeCheckboxIsChecked selector="{{AdminProductImagesSection.altTextUseDefault}}" after="seeInputDisabled" stepKey="seeUseDefaultChecked"/>
    </actionGroup>
</actionGroups>
