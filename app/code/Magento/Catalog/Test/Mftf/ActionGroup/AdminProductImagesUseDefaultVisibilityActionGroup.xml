<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminProductImagesUseDefaultVisibilityActionGroup" extends="AdminProductImagesAssertHiddenActionGroup">
        <annotations>
            <description>Expands "Images And Videos" section, clicks on provided image, checks "Use Default value" for "Hide from Product Page"</description>
        </annotations>
        <remove keyForRemoval="optionChecked"/>
        <checkOption selector="{{AdminProductImagesSection.hideFromProductUseDefault}}" after="waitForSlideOut" stepKey="checkUseDefault"/>
    </actionGroup>
</actionGroups>
