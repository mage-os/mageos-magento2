<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminProductImagesHideActionGroup" extends="AdminProductImagesAssertHiddenActionGroup">
        <annotations>
            <description>Expands "Images And Videos" section, clicks on provided image and checks "Hide from Product Page"</description>
        </annotations>
        <remove keyForRemoval="optionChecked"/>
        <conditionalClick selector="{{AdminProductImagesSection.hideFromProductUseDefault}}" dependentSelector="{{AdminProductImagesSection.isHideFromProductPageUseDefaultSelected}}" visible="true" after="waitForSlideOut" stepKey="uncheckUseDefault"/>
        <waitForElementNotVisible selector="{{AdminProductImagesSection.isHideFromProductPageDisabled}}" after="uncheckUseDefault" stepKey="waitForCheckboxEnabled"/>
        <conditionalClick selector="{{AdminProductImagesSection.hideFromProductPageLabel}}" dependentSelector="{{AdminProductImagesSection.isHideFromProductPageSelected}}" visible="false" after="waitForCheckboxEnabled" stepKey="checkOption"/>
    </actionGroup>
</actionGroups>
