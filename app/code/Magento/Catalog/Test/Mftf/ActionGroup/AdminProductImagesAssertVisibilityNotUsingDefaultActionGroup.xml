<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminProductImagesAssertVisibilityNotUsingDefaultActionGroup" extends="AdminProductImagesAssertHiddenActionGroup">
        <annotations>
            <description>Expands "Images And Videos" section, clicks on provided image, assert "Hide from Product Page" is not using default value.</description>
        </annotations>
        <remove keyForRemoval="optionChecked"/>
        <waitForElement selector="{{AdminProductImagesSection.isHideFromProductPageEnabled}}" after="waitForSlideOut" stepKey="seeInputEnabled"/>
        <dontSeeCheckboxIsChecked selector="{{AdminProductImagesSection.hideFromProductUseDefault}}" after="seeInputEnabled" stepKey="dontSeeUseDefaultChecked"/>
    </actionGroup>
</actionGroups>
