<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminProductImagesAssertSortOrderNotUsingDefaultActionGroup" extends="AdminProductImagesAssertSortOrderUsingDefaultActionGroup">
        <annotations>
            <description>Expands "Images And Videos" section, assert that images sort order is not using default scope sort order.</description>
        </annotations>
        <remove keyForRemoval="seeSortingIsUsingDefault"/>
        <dontSeeCheckboxIsChecked selector="{{AdminProductImagesSection.sortOrderUseDefault}}" after="waitForPageLoad" stepKey="dontSeeSortingIsUsingDefault"/>
    </actionGroup>
</actionGroups>
