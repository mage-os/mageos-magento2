<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminAssignImageRolesActionGroup">
        <annotations>
            <description>Requires the navigation to the Product Creation page. Checks the Base, Small, Thumbnail, and Swatch Roles areas for images.</description>
        </annotations>
        <arguments>
            <argument name="image"/>
        </arguments>
        <conditionalClick selector="{{AdminProductImagesSection.productImagesToggle}}" dependentSelector="{{AdminProductImagesSection.imageFile(image.fileName)}}" visible="false" stepKey="expandImages"/>
        <waitForElementVisible selector="{{AdminProductImagesSection.imageFile(image.fileName)}}" stepKey="seeProductImageName"/>
        <click selector="{{AdminProductImagesSection.imageFile(image.fileName)}}" stepKey="clickProductImage"/>
        <waitForElementVisible selector="{{AdminProductImagesSection.altText}}" stepKey="seeAltTextSection"/>
        <waitForPageLoad stepKey="waitForSlideOut"/>
        
        <conditionalClick selector="{{AdminProductImagesSection.roleBaseUseDefault}}" dependentSelector="{{AdminProductImagesSection.isBaseUseDefaultSelected}}" visible="true" stepKey="uncheckBaseUseDefault"/>
        <waitForElementNotVisible selector="{{AdminProductImagesSection.isBaseDisabled}}" stepKey="waitForRoleBaseEnabled"/>
        <conditionalClick selector="{{AdminProductImagesSection.roleBase}}" dependentSelector="{{AdminProductImagesSection.isBaseSelected}}" visible="false" stepKey="checkRoleBase"/>

        <conditionalClick selector="{{AdminProductImagesSection.roleSmallUseDefault}}" dependentSelector="{{AdminProductImagesSection.isSmallUseDefaultSelected}}" visible="true" stepKey="uncheckSmallUseDefault"/>
        <waitForElementNotVisible selector="{{AdminProductImagesSection.isSmallDisabled}}" stepKey="waitForRoleSmallEnabled"/>
        <conditionalClick selector="{{AdminProductImagesSection.roleSmall}}" dependentSelector="{{AdminProductImagesSection.isSmallSelected}}" visible="false" stepKey="checkRoleSmall"/>

        <conditionalClick selector="{{AdminProductImagesSection.roleThumbnailUseDefault}}" dependentSelector="{{AdminProductImagesSection.isThumbnailUseDefaultSelected}}" visible="true" stepKey="uncheckThumbnailUseDefault"/>
        <waitForElementNotVisible selector="{{AdminProductImagesSection.isThumbnailDisabled}}" stepKey="waitForRoleThumbnailEnabled"/>
        <conditionalClick selector="{{AdminProductImagesSection.roleThumbnail}}" dependentSelector="{{AdminProductImagesSection.isThumbnailSelected}}" visible="false" stepKey="checkRoleThumbnail"/>
        
        <conditionalClick selector="{{AdminProductImagesSection.roleSwatchUseDefault}}" dependentSelector="{{AdminProductImagesSection.isSwatchUseDefaultSelected}}" visible="true" stepKey="uncheckSwatchUseDefault"/>
        <waitForElementNotVisible selector="{{AdminProductImagesSection.isSwatchDisabled}}" stepKey="waitForRoleSwatchEnabled"/>
        <conditionalClick selector="{{AdminProductImagesSection.roleSwatch}}" dependentSelector="{{AdminProductImagesSection.isSwatchSelected}}" visible="false" stepKey="checkRoleSwatch"/>
        
        <click selector="{{AdminSlideOutDialogSection.closeButton}}" stepKey="clickCloseButton"/>
    </actionGroup>
</actionGroups>
