<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminProductImagesUseDefaultAltTextActionGroup" extends="AdminProductImagesAssertHiddenActionGroup">
        <annotations>
            <description>Expands "Images And Videos" section, clicks on provided image, Check "Use Default value" for Alt Text</description>
        </annotations>
        <remove keyForRemoval="optionChecked"/>
        <checkOption selector="{{AdminProductImagesSection.altTextUseDefault}}" after="waitForSlideOut" stepKey="checkUseDefault"/>
    </actionGroup>
</actionGroups>
