<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminProductImagesAssertSortOrderUsingDefaultActionGroup">
        <annotations>
            <description>Expands "Images And Videos" section, assert that images sort order is using default scope sort order.</description>
        </annotations>
        <waitForElementVisible selector="{{AdminProductImagesSection.productImagesToggle}}" stepKey="waitForProductImagesSection"/>
        <conditionalClick selector="{{AdminProductImagesSection.productImagesToggle}}" dependentSelector="{{AdminProductImagesSection.imageUploadButton}}" visible="false" stepKey="openProductImagesSection"/>
        <waitForPageLoad stepKey="waitForPageLoad"/>
        <seeCheckboxIsChecked selector="{{AdminProductImagesSection.sortOrderUseDefault}}" stepKey="seeSortingIsUsingDefault"/>
    </actionGroup>
</actionGroups>
