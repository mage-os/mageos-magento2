<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminProductImagesAssertNotHiddenActionGroup" extends="AdminProductImagesAssertHiddenActionGroup">
        <annotations>
            <description>Expands "Images And Videos" section, clicks on provided image, assert given image is not hidden.</description>
        </annotations>
        <arguments>
            <argument name="image" defaultValue="ProductImage"/>
        </arguments>
        <remove keyForRemoval="optionChecked"/>
        <dontSeeCheckboxIsChecked selector="{{AdminProductImagesSection.hideFromProductPage}}" after="waitForSlideOut" stepKey="optionUnchecked"/>
    </actionGroup>
</actionGroups>
