<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="CliDisableFreeShippingMethodActionGroup">
        <annotations>
            <description>Disable Free Shipping method by CLI command config:set</description>
        </annotations>

        <magentoCLI command="config:set {{DisableFreeShippingMethod.path}} {{DisableFreeShippingMethod.value}}" stepKey="disableFreeShippingMethod"/>
    </actionGroup>
</actionGroups>
