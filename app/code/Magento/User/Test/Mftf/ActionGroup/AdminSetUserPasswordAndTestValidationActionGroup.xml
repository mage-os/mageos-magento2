<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminSetUserPasswordAndTestValidationActionGroup">
        <annotations>
            <description>Set password fields and trigger validation by attempting to save</description>
        </annotations>
        <arguments>
            <argument name="password" type="string"/>
        </arguments>
        <fillField selector="{{AdminEditUserSection.passwordTextField}}" userInput="{{password}}" stepKey="enterPassword"/>
        <fillField selector="{{AdminEditUserSection.pwConfirmationTextField}}" userInput="{{password}}" stepKey="confirmPassword"/>
        <!-- Trigger validation by clicking save button -->
        <click selector="{{AdminEditUserSection.saveButton}}" stepKey="clickSaveToTriggerValidation"/>
        <wait time="2" stepKey="waitForValidation"/>
    </actionGroup>
</actionGroups>
