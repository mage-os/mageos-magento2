        <arguments>
            <argument name="rowId" type="string"/>
        </arguments>

        <checkOption selector="{{AdminConfigSection.useSystemValue(rowId)}}" stepKey="checkUseSystemValue"/>
    </actionGroup>
</actionGroups>
